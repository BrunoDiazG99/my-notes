{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowImportingTsExtensions": false, // disable, not needed in CommonJS
    "declaration": true,
    "emitDeclarationOnly": false, // you want .js files emitted
    "lib": ["es2020"],
    "noEmit": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": false
  }
}
